<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkModeBackground"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Switch
            android:id="@+id/ustawieniaTrybCiemny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tryb ciemny"
            android:textColor="@color/darkModeText"
            android:paddingHorizontal="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkModeText"
            android:text="Jednostka opadÃ³w"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ustawieniaJednostkaOpadow"
            android:theme="@style/AppTheme.DarkElementTheme"
            android:textColor="@color/darkModeText"
            android:paddingLeft="10dp"
            android:entries="@array/jednostki_opadow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkModeText"
            android:text="Jednostka wiatru"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ustawieniaJednostkaPredkosciWiatru"
            android:textColor="@color/darkModeText"
            android:theme="@style/AppTheme.DarkElementTheme"
            android:paddingLeft="10dp"
            android:entries="@array/jednostki_predkosci_wiatru"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/zatwierdzUstawienia"
            android:text="ZASTOSUJ"
            android:textColor="@color/darkModeText"
            android:background="@color/darkModeSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>